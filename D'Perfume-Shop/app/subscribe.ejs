<% if (current === "index" || current === "product" ) { %>
<section class="subscribe d-flex align-items-end pb-20">
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-xl-4" data-aos="fade-up">
        <label class="h2 text-secondary font-weight-bold mb-5"
          for="email_subscribe">記得<br>
          訂閱以獲取更多資訊！</label>
        <form class="needs-validation" novalidate>
          <div class="input-group mb-8">
            <input type="email" class="form-control form-control-lg" name="email_subscribe" id="email_subscribe" placeholder="Your email address" required>
            <div class="input-group-append">
              <button class="input-group-text px-6 btn-primary" type="submit" value="Subscribe">Subscribe</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</section>
<% } else { } %>